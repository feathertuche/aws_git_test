# Stage 1: Build environment
FROM python:3.10 AS builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    python3-dev \
    libmariadb-dev \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .

RUN python -m venv venv && \
    /bin/bash -c "source venv/bin/activate && pip install --no-cache-dir -r requirements.txt"

# Stage 2: Production environment
FROM python:3.10-alpine

WORKDIR /app

# Copy virtual environment from the previous stage
COPY --from=builder /app/venv /app/venv
COPY . .

# Install runtime dependencies
RUN apk add --no-cache mariadb-connector-c

# Update OS package and Python packages
RUN apk update && \
    #apk add --no-cache mariadb-connector-c && \
    pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir --upgrade setuptools wheel && \
    #pip install --no-cache-dir mysqlclient && \
    rm -rf /var/cache/apk/*

EXPOSE 8000

CMD ["venv/bin/python", "manage.py", "runserver", "0.0.0.0:8000"]
