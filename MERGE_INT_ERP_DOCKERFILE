# Stage 1: Build environment
FROM python:3.10-alpine AS builder

WORKDIR /app

COPY requirements.txt .

RUN python -m venv venv
RUN /bin/ash -c "source venv/bin/activate && pip install --no-cache-dir -r requirements.txt"

# Stage 2: Production environment
FROM python:3.10-alpine

WORKDIR /app

COPY --from=builder /app/venv /app/venv
COPY . .

# Update OS package and Python packages
RUN apk update && apk upgrade && \
    apk add --no-cache gcc musl-dev linux-headers && \
    pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir --upgrade setuptools wheel && \
    apk del gcc musl-dev linux-headers && \
    rm -rf /var/cache/apk/* && \
    # Install fixed versions of the vulnerable packages
    pip install --no-cache-dir --upgrade aom==3.6.0.post1 && \
    pip install --no-cache-dir --upgrade pyminizip==0.2.8

EXPOSE 8000

CMD ["venv/bin/python", "manage.py", "runserver", "0.0.0.0:8000"]
