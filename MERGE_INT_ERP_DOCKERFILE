FROM ubuntu:latest

# Set noninteractive environment
ENV DEBIAN_FRONTEND=noninteractive

# Install Python 3.11 and other dependencies
RUN apt-get update && \
    apt-get install -y software-properties-common && \
    add-apt-repository -y ppa:deadsnakes/ppa && \
    apt-get update && \
    apt-get install -y python3.8 python3.8-dev default-libmysqlclient-dev build-essential python3-pip pkg-config && \
    apt-get clean

# Set working directory
WORKDIR /app

# Copy the application code into the image
COPY . .

# Install Python dependencies from requirements.txt
RUN pip3 install --no-cache-dir -r requirements.txt

# Command to run your application
CMD ["python3.11", "manage.py", "runserver", "0.0.0.0:8000"]
